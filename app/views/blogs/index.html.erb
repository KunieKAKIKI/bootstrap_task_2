<h1>ブログ一覧</h1>

<p><%= notice %></p>

<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>
<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%= link_to '編集',edit_blog_path(blog.id),data: { confirm: '本当に編集していいですか？' } %></td>
    <td><%= link_to '削除',blog_path(blog.id),method: :delete,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>

<p><%= link_to '新規投稿',new_blog_path %></p>