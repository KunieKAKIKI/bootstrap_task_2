<!DOCTYPE html>
<html>
  <head>
    <title>Task2</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
              <span class="sr-only">Bootstrap</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">BLOGS</a>
          </div>
          <div id="gnavi" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
              <li><%= link_to "ブログ一覧", blogs_path %></li>
              <li><%= link_to '新規投稿',new_blog_path %></li>
            </ul>
          
            <ul class="login">
              <% if logged_in? %>
                <li><%= link_to "#{current_user.name}さんのユーザ情報", user_path(current_user.id) %></li>
                <li><%= link_to "ログアウト", session_path(current_user.id), method: :delete %></li>
              <% else %>
                <li><%= link_to "ユーザ登録", new_user_path %></li>
                <li><%= link_to "ログイン", new_session_path %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    <div class="main_section">
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
  
      <%= yield %>
    </div>
    
    <footer>
    　　<p>Bootstrapシリーズ課題２</p>
    　　<p>KAKIKI Kunie</p>
  　</footer>
  　
  </body>
</html>
